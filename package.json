{
  "name": "pharmcat",
  "version": "3.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/PharmGKB/PharmCAT.git"
  },
  "private": true,
  "engines": {
    "node": "> 18.0.0"
  },
  "packageManager": "yarn@4.9.1",
  "devDependencies": {
    "@google/semantic-release-replace-plugin": "1.2.7",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "netlify-cli": "20.0.2",
    "semantic-release": "24.2.3",
    "showdown": "2.1.0"
  },
  "release": {
    "branches": [
      {
        "name": "development"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "preprocessor/pcat/common.py"
              ],
              "from": "^PHARMCAT_VERSION = .*",
              "to": "PHARMCAT_VERSION = '${nextRelease.version}'",
              "results": [
                {
                  "file": "preprocessor/pcat/common.py",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "bin/setup.sh"
              ],
              "from": "^PHARMCAT_VERSION=.*",
              "to": "PHARMCAT_VERSION=${nextRelease.version}",
              "results": [
                {
                  "file": "bin/setup.sh",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "docs/_config.yml"
              ],
              "from": "^pharmcat_version: .*",
              "to": "pharmcat_version: ${nextRelease.version}",
              "results": [
                {
                  "file": "docs/_config.yml",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "dockstore/pipeline/README.md"
              ],
              "from": "^PharmCAT v.*",
              "to": "PharmCAT v${nextRelease.version}.",
              "results": [
                {
                  "file": "dockstore/pipeline/README.md",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "dockstore/pipeline/PharmCAT_Pipeline.wdl"
              ],
              "from": "docker: \"pgkb/pharmcat:.*\"",
              "to": "docker: \"pgkb/pharmcat:${nextRelease.version}\"",
              "results": [
                {
                  "file": "dockstore/pipeline/PharmCAT_Pipeline.wdl",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "writerOpts": {
            "commitsGroupSort": [
              "feat",
              "perf",
              "fix"
            ],
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "feature",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Improvements"
              },
              {
                "type": "perf",
                "section": "Improvements"
              }
            ],
            "commitsSort": "header"
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "bin/setup.sh",
            "dockstore/pipeline/PharmCAT_Pipeline.wdl",
            "dockstore/pipeline/README.md",
            "docs/_config.yml",
            "package.json",
            "preprocessor/pcat/common.py"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ]
    ],
    "ci": false
  },
  "scripts": {
    "release": "semantic-release",
    "localDocs": "netlify deploy --dir=docs/_site --prod"
  }
}
